{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "src/**/*"
    ]
}